<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textScanner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap below to scan"
        android:layout_gravity="center"
        android:height="200px" />

    <!--        android:onClick="@{() -> ScannerViewModel.save()}"-->
    <ImageButton
        android:id="@+id/qr_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layout_gravity="center"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <Button
        android:id="@+id/auth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="auth"
        android:layout_gravity="center" />
    <Button
        android:id="@+id/initBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="issue init ticket" />

    <Button
        android:id="@+id/billingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="issue billing ticket" />

    <Button
        android:id="@+id/settingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="issue setting ticket" />

    <Button
        android:id="@+id/votingBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="issue voting ticket" />

    <Button
        android:id="@+id/requestBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="request voting" />


</LinearLayout>

